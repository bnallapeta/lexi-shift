[flake8]
max-line-length = 100
exclude = .git,__pycache__,build,dist,venv,.venv
ignore = E203, W503
# E203: Whitespace before ':' (conflicts with black)
# W503: Line break before binary operator (conflicts with black)
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow unused imports in test files
    tests/*:F401,F841
    # Allow unused imports in API modules
    src/api/*:F401,F841
    # Allow unused imports in main module
    src/main.py:F401,F841
    # Allow unused imports in models
    src/models/*.py:F401
    # Allow unused imports in utils
    src/utils/*.py:F401
    # Allow unused imports in config
    src/config.py:F401 